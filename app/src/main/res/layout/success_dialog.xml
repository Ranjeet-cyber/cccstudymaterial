<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:id="@+id/layout_countainer"
    android:layout_margin="20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_countainer1"
        android:layout_width="match_parent"
        android:layout_marginTop="180dp"
        android:background="@drawable/circularbordersolid"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/text15"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/btn_noo"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="@+id/text15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text15"

            app:layout_constraintVertical_bias="0.842"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text16"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView15"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:textStyle="bold"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/bright_foreground_material_light"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:layout_width="0dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:background="@drawable/btn_home"
        app:layout_constraintBottom_toBottomOf="@+id/layout_countainer1"
        app:layout_constraintTop_toBottomOf="@+id/layout_countainer1"
        android:textSize="14sp"
        android:id="@+id/btnNo"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp" />
    <Button
        android:layout_width="0dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/btnNo"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/layout_countainer1"
        android:textColor="@color/white"

        android:background="@drawable/btnt"
        app:layout_constraintBottom_toBottomOf="@+id/layout_countainer1"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="14sp"
        android:id="@+id/btnYes"
        android:layout_height="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>