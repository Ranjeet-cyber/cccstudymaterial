<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="50dp">
        <LinearLayout android:background="@color/colorAccent" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="5">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="70dp">
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentStart="true">
                    <ImageView android:layout_gravity="center" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="10dp" android:src="@drawable/right"/>
                    <TextView android:textSize="@dimen/text_size" android:textColor="@color/text_color" android:gravity="center" android:layout_gravity="center" android:id="@+id/score" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginLeft="10dp" android:text="0"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_alignParentEnd="true">
                    <ImageView android:layout_gravity="center" android:layout_width="30dp" android:layout_height="25dp" android:layout_marginLeft="10dp" android:src="@drawable/wrong"/>
                    <TextView android:textSize="@dimen/text_size" android:textColor="@color/text_color" android:gravity="center" android:layout_gravity="center" android:id="@+id/wrongscore" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="0"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/text_color" android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/question" android:background="@drawable/bkgd_transparent1" android:paddingLeft="10dp" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="100dp" android:layout_margin="5dp" android:text="TextView" android:layout_weight="1" android:fontFamily="@font/muktaregular"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:layout_weight="1">
                <LinearLayout android:orientation="horizontal" android:background="@drawable/background_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
                    <RelativeLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
                        <ImageView android:id="@+id/iconbtn1" android:visibility="invisible" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/right"/>
                        <ImageView android:id="@+id/correcticonbtn1" android:visibility="invisible" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/wrong"/>
                    </RelativeLayout>
                    <Button android:textSize="@dimen/text_size" android:textColor="@color/text_color" android:gravity="center" android:id="@+id/answer1" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Button" android:maxLines="1" android:maxLength="140" android:textAllCaps="false" android:fontFamily="@font/muktaregular"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:background="@drawable/background_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
                    <RelativeLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
                        <ImageView android:id="@+id/iconbtn2" android:visibility="invisible" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/right"/>
                        <ImageView android:id="@+id/correcticonbtn2" android:visibility="invisible" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/wrong"/>
                    </RelativeLayout>
                    <Button android:textSize="@dimen/text_size" android:textColor="@color/text_color" android:gravity="center" android:id="@+id/answer2" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Button" android:maxLines="1" android:maxLength="140" android:textAllCaps="false" android:fontFamily="@font/muktaregular"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:background="@drawable/background_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
                    <RelativeLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
                        <ImageView android:id="@+id/iconbtn3" android:visibility="invisible" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/right"/>
                        <ImageView android:id="@+id/correcticonbtn3" android:visibility="invisible" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/wrong"/>
                    </RelativeLayout>
                    <Button android:textSize="@dimen/text_size" android:textColor="@color/text_color" android:gravity="center" android:id="@+id/answer3" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Button" android:maxLines="1" android:maxLength="140" android:textAllCaps="false" android:fontFamily="@font/muktaregular"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:background="@drawable/background_btn" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp">
                    <RelativeLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
                        <ImageView android:id="@+id/iconbtn4" android:visibility="invisible" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/right"/>
                        <ImageView android:id="@+id/correcticonbtn4" android:visibility="invisible" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/wrong"/>
                    </RelativeLayout>
                    <Button android:textSize="@dimen/text_size" android:textColor="@color/text_color" android:gravity="center" android:id="@+id/answer4" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Button" android:maxLines="1" android:maxLength="140" android:textAllCaps="false" android:fontFamily="@font/muktaregular"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:background="@drawable/button_bacgrd1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="10dp" android:layout_marginRight="5dp" android:weightSum="2.5">
                    <Button android:textSize="18sp" android:textColor="@color/text_color" android:gravity="center" android:id="@+id/skip" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Skip" android:layout_weight="1" android:fontFamily="@font/muktabold"/>
                    <ImageView android:layout_gravity="center" android:id="@+id/sharequestion" android:layout_width="0dp" android:layout_height="40dp" android:src="@drawable/ic_baseline_share_24" android:layout_weight="0.5"/>
                    <Button android:textSize="18sp" android:textColor="@color/text_color" android:gravity="center" android:id="@+id/finish" android:background="@android:color/transparent" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="5dp" android:text="Finish" android:layout_weight="1" android:fontFamily="@font/muktabold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/BANNER_id"></com.google.android.gms.ads.AdView>
</RelativeLayout>
